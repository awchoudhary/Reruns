<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view_series"
    app:cardUseCompatPadding="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/transparent"
    style="@style/CardView"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        >

        <TextView
            android:id="@+id/text_view_series_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="@style/CardViewSeriesName"
            />

        <com.yahoo.mobile.client.android.util.rangeseekbar.RangeSeekBar
            android:id="@+id/seekbar_series_range"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/button_get_episode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_get_episode_button"
            />

    </LinearLayout>

</android.support.v7.widget.CardView>