<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/midnightBlue</item>
        <item name="colorPrimaryDark">@color/darkMidnightBlue</item>
        <item name="colorAccent">@color/mint</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/midnightBlue</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CardViewSeriesName">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/card_view_series_name</item>
    </style>

    <style name="CardView">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">16dp</item>
    </style>

</resources>
